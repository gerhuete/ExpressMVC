<div class="container">
    <div class="card">
        <div style="text-align: center;"><h3>Edit Post</h3></div>
        <form action="/posts/edit/{{post._id}}" method="POST" class="form-signin">
            <div class="form-group">
                <label for="txtTitle">Title</label>
                <input type="text" value="{{post.title}}" id="txtTitle" name="title" class="form-control">
            </div>
            <div class="form-group">
                <label for="txtImageUrl">Image URL</label>
                <input type="text" value="{{post.imageUrl}}" id="txtImageUrl" name="imageUrl" class="form-control">
            </div>
            <div class="form-group">
                <label for="txtContent">Content</label>
                <input type="text" value="{{post.content}}" id="txtContent" name="content" class="form-control">
            </div>
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>